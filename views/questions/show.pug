extends ../layout

block content
  .container
    h1.main-title= question.title

    .question.show
      include _question


      .buttons
        button.btn.btn-primary #[i.fa.fa-thumbs-up] 좋아요
        | 
        a.btn.btn-outline-secondary(href=`/questions/${question.id}/edit`) 수정
        | 
        a.btn.btn-outline-danger.delete-btn(href="#", data-url=`/questions/${question.id}?_method=delete`) 삭제
      
    if question.numAnswers > 0
      hr
      h3 #{question.numAnswers} 문의사항(s)
      .answers.show
        each answer in answers
          include _answer

    form(action=`/questions/${question.id}/answers`, method='POST')
      .form-group
        label(for='answer') 문의사항
        textarea.form-control(name="content", rows="5")
      button.btn.btn-primary(type="submit") 문의사항을 남겨주세요.

  script.
    $(function() {
      $('.delete-btn').click(function() {
        if (confirm('Are you sure to delete?')) {
          location = $(this).data('url');
        }
        return false;
      });
    });

 

  
